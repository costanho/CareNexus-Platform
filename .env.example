# ============================================================
# CareNexus Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control
# ============================================================

# ============================================================
# MySQL Database Configuration
# ============================================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=carenexus_direct
MYSQL_USER=appuser
MYSQL_PASSWORD=apppassword
MYSQL_PORT=3307

# ============================================================
# JWT Authentication Configuration
# Generates tokens for API authentication
# ============================================================
# Base64 encoded secret key (minimum 32 bytes for HS256)
# Generate with: openssl rand -base64 32
JWT_SECRET=U29tZVN1cGVyU2VjdXJlSldUU2VjcmV0S2V5MTIzNCE=

# Token expiration in milliseconds (1 day = 86400000)
JWT_EXPIRATION=86400000

# Refresh token expiration in milliseconds (7 days = 604800000)
JWT_REFRESH_EXPIRATION=604800000

# ============================================================
# Direct Service Configuration
# ============================================================
DIRECT_SERVICE_PORT=8081

# ============================================================
# Adminer (Optional Database UI)
# ============================================================
ADMINER_PORT=8082

# ============================================================
# Spring Boot Configuration
# ============================================================
SPRING_PROFILES_ACTIVE=docker
